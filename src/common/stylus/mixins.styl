bg-img($url)
  background-image url('./img/'+$url+'@2x.png')
  @media (min-device-pixel-ratio:3),(-webkit-min-device-pixel-ratio:3)
    background-image url('./img/'+$url+'@3x.png')

bg-star($url)
  background-image url('../star/'+$url+'@2x.png')
  @media (min-device-pixel-ratio:3),(-webkit-min-device-pixel-ratio:3)
    background-image url('../star/'+$url+'@3x.png')
border-1px($color)
  position: relative;
  border:none;
  &:after
    content: '';
    position: absolute;
    bottom: 0;
    background:$color ;
    width: 100%;
    height: 1px;
    transform: scaleY(0.5);
